extends ../layouts/common

block content
	h1 Product

	.d-flex.align-items-center
		form.ml-auto(action="/product/search", method="GET", class="d-flex")
			input(type="text", name="q", class="form-control ")
			button(class="btn btn-primary ml-2") Search

	
	.d-flex.flex-wrap.justify-content-between
		each product in products
			.card.mb-4(style='width: 15rem;')
				img.card-img-top(src=product.image, alt='...')
				.card-body
					h5.card-title= product.name
					p.card-text= product.description
				a.btn.btn-primary(href='#') Add to cart
	
	if(page !== 0)
		if(page === 1)
			nav(aria-label='...')
				ul.pagination
					li.page-item.active(aria-current='page')
						a.page-link(href='/product') 1
					li.page-item
						a.page-link(href='/product?page=2') 2
							span.sr-only (current)
					li.page-item
						a.page-link(href='/product?page=3') 3

		else 
			if(page === total)
				nav(aria-label='...')
					ul.pagination
						li.page-item
							a.page-link(href='/product?page=11') 11
						li.page-item
							a.page-link(href='/product?page=12') 12
								span.sr-only (current)
						li.page-item.active(aria-current='page')
							a.page-link(href='/product?page=13') 13

			else
				nav(aria-label='...')
					ul.pagination
						li.page-item
							a.page-link(href='/product?page=' + (page-1))= (page - 1)
						li.page-item.active(aria-current='page')
							a.page-link(href='/product?page=' + page)= page
								span.sr-only (current)
						li.page-item
							a.page-link(href='/product?page=' + (page + 1))= (page + 1)



